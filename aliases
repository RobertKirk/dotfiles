alias personal='cd ~/repos/personal/'
alias reload='source ~/.zshrc'
alias b='z -b'
alias album='tizonia --spotify-album'
alias l='ll'
alias repo='cd ~/repos'
alias r=ranger
alias fial='alias | ag'

mkalias() {
   echo "alias $1='$2'" >> ~/.aliases.sh
   source ~/.zshrc
}
