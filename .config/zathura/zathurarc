set font                        "Source Code Pro 9"

# zathurarc-light-solarized
set notification-error-bg       "#eee8d5"
set notification-error-fg       "#dc322f"
set notification-warning-bg     "#eee8d5"
set notification-warning-fg     "#dc322f"
set notification-bg             "#eee8d5"
set notification-fg             "#368bd2"

set completion-bg               "#fdf6e3"
set completion-fg               "#657b83"
set completion-group-bg         "#eee8d5"
set completion-group-fg         "#586e75"
set completion-highlight-bg     "#93a1a1"
set completion-highlight-fg     "#073642"

# Define the color in index mode
set index-bg                   "#fdf6e3"
set index-fg                   "#657b83"
set index-active-bg             "#eee8d5"
set index-active-fg             "#586e75"

set inputbar-bg                 "#93a1a1"
set inputbar-fg                 "#073642"

set statusbar-bg                "#fdf6e3"
set statusbar-fg                "#657b83"

set highlight-color             "#839496"
set highlight-active-color      "#cb3616"

set default-bg                  "#fdf6e3"
set default-fg                  "#657b83"
set render-loading              "true"
set render-loading-fg           "#fdf6e3"
set render-loading-bg           "#fdf6e3"

# Recolor book content's color
# verbose
set recolor-lightcolor          "#fdf6e3"
set recolor-darkcolor           "#657b83"
set recolor                     "true"

# Setting recolor-keep true will keep any color your pdf has.
# If it is false, it'll just be black and white.
set recolor-keephue             "false"

# Rest of your configs go here:

set adjust-open width
set pages-per-row 1
set smooth-scroll true
set selection-clipboard clipboard
set incremental-search true
set guioptions ""

set window-title-home-tilde true
set window-title-basename true
set statusbar-home-tilde true
set show-hidden true

map d scroll half-down
map u scroll half-up
map K zoom in
map J zoom out
map x toggle_page_mode
map <C-r> rotate
map r recolor
